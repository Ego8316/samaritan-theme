{
	"name": "samaritan-theme",
	"displayName": "Samaritan UI",
	"description": "Red and black light theme inspired by the Samaritan AI from Person of Interest.",
	"version": "1.1.0",
	"author": "Hugo Cavet",
	"publisher": "Ego8316",
	"icon": "logo.png",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/Ego8316/samaritan-theme"
	},
	"engines": {
		"vscode": "^1.98.0"
	},
	"categories": [
		"Themes"
	],
	"contributes": {
		"themes": [
		{
			"label": "Samaritan",
			"uiTheme": "vs",
			"path": "./themes/samaritan-color-theme.json"
		}
		],
		"configuration": {
			"type": "object",
			"properties": {
				"editor.fontFamily": {
					"type": "string",
					"default": "'Fira Code', 'Courier New', monospace",
					"description": "Font family used in the editor."
				}
			}
		}
	}
}
